{
  "name": "media-blender",
  "version": "1.0.0",
  "description": "Easy and predictable media queries",
  "main": "media.scss",
  "scripts": {
    "build": "sass --sourcemap=none test.scss test.css",
    "test": "npm run __stylelint && mocha test/test_sass.js",
    "__stylelint": "stylelint \"*.scss\" --syntax scss",
    "precommit": "npm test",
    "watch": "npm-watch"
  },
  "watch": {
    "test": {
      "patterns": [".", "test"],
      "extensions": "js,scss",
      "ignore": "./test.scss"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/infinum/media-blender.git"
  },
  "keywords": [
    "scss",
    "mixin",
    "media",
    "mobile",
    "desktop",
    "tablet",
    "blender",
    "retina",
    "orientation",
    "landscape",
    "portrait",
    "css"
  ],
  "author": "Infinum <javascript.team@infinum.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/infinum/media-blender/issues"
  },
  "homepage": "https://github.com/infinum/media-blender#readme",
  "devDependencies": {
    "husky": "^0.11.9",
    "mocha": "^3.1.2",
    "mocha-cli": "^1.0.1",
    "node-sass": "^3.10.1",
    "npm-watch": "^0.1.6",
    "sass-true": "^2.1.3",
    "stylelint": "^7.5.0"
  }
}
